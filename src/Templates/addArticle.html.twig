{% extends "base.html.twig" %}
{% block title %}
    {{ parent() }}
    Add post
{% endblock %}

{% block body %}
    <h4>Add Article</h4>
<div class="container">
    <div class="row">
    <div id="parent" class="col-sm-6">
        <form enctype="multipart/form-data" id="addPost">
            <div class="form-group col-xs-8">
                <label for="title">Title</label>
                <input type="text" class="form-control" id="title" placeholder="Enter title">
            </div>
            <div class="form-group col-xs-8">
                <label for="image_url">Image URL</label>
                <input type="text" class="form-control" id="image_url" placeholder="Image URL">
            </div>
            <div class="form-group col-xs-8">
                <label for="text">Text</label>
                <textarea maxlength="1000" class="form-control" id="text" placeholder="Enter text"></textarea>
            </div>
            <div class="form-group col-xs-8">
                <button type="button" class="btn btn-success" onclick="addArticle()">Add blog post</button>
                <div id="res_msg" class="text-danger"></div>
            </div>
        </form>
    </div>
    </div>
</div>
    {% block content %}{% endblock %}
{% endblock %}
